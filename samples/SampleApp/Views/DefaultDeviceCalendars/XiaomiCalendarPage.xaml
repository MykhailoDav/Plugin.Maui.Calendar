<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="SampleApp.Views.XiaomiCalendarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SampleApp.Controls"
    xmlns:models="using:SampleApp.Model"
    xmlns:plugin="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
    xmlns:styles="clr-namespace:Plugin.Maui.Calendar.Styles;assembly=Plugin.Maui.Calendar"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:SampleApp.ViewModels"
    x:DataType="vm:XiaomiCalendarViewModel"
    BackgroundColor="{toolkit:AppThemeResource BackgroundColor}"
    Shell.TabBarIsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:AppThemeColor
                x:Key="BackgroundColor"
                Dark="Black"
                Light="#f5f5f5" />
            <toolkit:AppThemeColor
                x:Key="BorderColor"
                Dark="#191a1c"
                Light="White" />
            <toolkit:AppThemeColor
                x:Key="StrokeColor"
                Dark="#232426"
                Light="#e2e2e2" />
            <toolkit:AppThemeColor
                x:Key="OtherMonthTextColor"
                Dark="#3f3f3f"
                Light="#c3c3c3" />
            <toolkit:AppThemeColor
                x:Key="DaysTitleTextColor"
                Dark="#646464"
                Light="#949494" />
            <toolkit:AppThemeColor
                x:Key="TodayDayTextColor"
                Dark="#0c80de"
                Light="#2f91c2" />
            <toolkit:AppThemeColor
                x:Key="WeekendDaysTextColor"
                Dark="#b43e3e"
                Light="#a33b42" />
            <toolkit:AppThemeColor
                x:Key="ButtonColor"
                Dark="#3b3b3b"
                Light="White" />

            <Style x:Key="MyBorderStyle" TargetType="Border">
                <Setter Property="StrokeShape" Value="RoundRectangle 16" />
                <Setter Property="Margin" Value="20,5" />
                <Setter Property="Padding" Value="20" />
                <Setter Property="Stroke" Value="{toolkit:AppThemeResource StrokeColor}" />
                <Setter Property="BackgroundColor" Value="{toolkit:AppThemeResource BorderColor}" />
            </Style>
            <Style x:Key="MyLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="TextColor" Value="{toolkit:AppThemeResource DeselectedDayLabelTextColor}" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Start" />
            </Style>
            <Style
                x:Key="MyTitleLabelStyle"
                BasedOn="{x:Static styles:DefaultStyles.DefaultWeekdayTitleStyle}"
                TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="{toolkit:AppThemeResource DaysTitleTextColor}" />
            </Style>
            <Style
                x:Key="MyWeekendTitleStyle"
                BasedOn="{x:Static styles:DefaultStyles.DefaultWeekendTitleStyle}"
                TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="{toolkit:AppThemeResource DaysTitleTextColor}" />
            </Style>
            <Style
                x:Key="MySelectedDateLabelStyle"
                BasedOn="{x:Static styles:DefaultStyles.DefaultSelectedDateLabelStyle}"
                TargetType="Label">
                <Setter Property="TextColor" Value="{toolkit:AppThemeResource DeselectedDayLabelTextColor}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid
        ColumnDefinitions="*,Auto"
        RowDefinitions="*,Auto"
        VerticalOptions="Fill">
        <plugin:Calendar
            x:Name="Calendar"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            AllowDeselecting="False"
            Day="{Binding Day}"
            DayViewCornerRadius="60"
            DayViewFontSize="18"
            DayViewSize="50"
            DeselectedDayTextColor="{toolkit:AppThemeResource DeselectedDayLabelTextColor}"
            EventIndicatorTextColor="{toolkit:AppThemeResource DeselectedDayLabelTextColor}"
            EventIndicatorType="TopDot"
            Events="{Binding Events}"
            EventsScrollViewVisible="True"
            FooterArrowVisible="False"
            FooterSectionVisible="False"
            HeaderSectionVisible="False"
            Month="{Binding Month}"
            OtherMonthDayColor="{toolkit:AppThemeResource OtherMonthTextColor}"
            SelectedDate="{Binding SelectedDate}"
            SelectedDateLabelStyle="{StaticResource MySelectedDateLabelStyle}"
            SelectedDayBackgroundColor="{toolkit:AppThemeResource StrokeColor}"
            SelectedTodayTextColor="{toolkit:AppThemeResource TodayDayTextColor}"
            TodayOutlineColor="Transparent"
            TodayTextColor="{toolkit:AppThemeResource TodayDayTextColor}"
            WeekdayTitleStyle="{StaticResource MyTitleLabelStyle}"
            WeekendDayColor="{toolkit:AppThemeResource WeekendDaysTextColor}"
            WeekendTitleStyle="{StaticResource MyWeekendTitleStyle}"
            Year="{Binding Year}">
            <plugin:Calendar.EventTemplate>
                <DataTemplate x:DataType="models:AdvancedEventModel">
                    <Border Style="{StaticResource MyBorderStyle}">
                        <VerticalStackLayout HorizontalOptions="Fill" VerticalOptions="Fill">
                            <Label Style="{StaticResource MyLabelStyle}" Text="{Binding Name}" />
                            <Label
                                Margin="0,10,0,0"
                                FontSize="14"
                                LineBreakMode="WordWrap"
                                Style="{StaticResource MyLabelStyle}"
                                Text="{Binding Description}" />
                            <Button
                                Margin="10"
                                BackgroundColor="{toolkit:AppThemeResource DeselectedDayLabelTextColor}"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:XiaomiCalendarViewModel}}, Path=EventTappedCommand}"
                                CommandParameter="{Binding}"
                                Text="Edit" />
                        </VerticalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:XiaomiCalendarViewModel}}, Path=EventTappedCommand}" CommandParameter="{Binding}" />
                        </Border.GestureRecognizers>
                    </Border>
                </DataTemplate>
            </plugin:Calendar.EventTemplate>

            <plugin:Calendar.EmptyTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource MyBorderStyle}">
                        <Label Style="{StaticResource MyLabelStyle}" Text="No events" />
                    </Border>
                </DataTemplate>
            </plugin:Calendar.EmptyTemplate>
        </plugin:Calendar>
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="35"
            Padding="0,0,0,8"
            BackgroundColor="{toolkit:AppThemeResource ButtonColor}"
            BorderColor="{toolkit:AppThemeResource StrokeColor}"
            BorderWidth="1"
            Command="{Binding AddEventCommand}"
            CornerRadius="30"
            FontSize="50"
            HeightRequest="60"
            HorizontalOptions="End"
            Text="+"
            TextColor="{toolkit:AppThemeResource TodayDayTextColor}"
            VerticalOptions="End"
            WidthRequest="60" />
    </Grid>
</ContentPage>